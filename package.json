{
  "name": "gourmetmiles-ble-client",
  "version": "1.0.0",
  "description": "BLE client for Gourmetmiles smart scale",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
