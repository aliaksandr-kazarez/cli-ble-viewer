    "clean": "rm -rf dist node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "ink": "^6.0.1",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.8",
    "nodemon": "^3.1.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
